{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "esModuleInterop": true, // Allows mixing of ESM and CJS imports/exports
    "skipLibCheck": true, // Skip type checking of declaration files. Code you don't control won't error and block.
    "verbatimModuleSyntax": true, // Keep import/export syntax as-is (don't convert to require/module.exports). This ensures that only imports importing only types are optimized (removed).
    "moduleDetection": "force", // Ensure all files are treated as modules (not scripts) to avoid global scope issues.
    "target": "esnext",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "module": "nodenext",
    "types": ["node"],
    "lib": ["esnext"], // Specify library files to be included
    "outDir": "./dist",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedSideEffectImports": true,

    "rootDir": "./src",
    "paths": {
      "#/*": ["./src/*"],
      "#utils/*": ["./src/utils/*"]
    }
  }
}
